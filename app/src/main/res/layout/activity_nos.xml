<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.pedro.qrcelula.Activity_nos">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="410dp"
        android:layout_height="697dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/abstrato"
        tools:layout_editor_absoluteX="-3dp"
        tools:layout_editor_absoluteY="-16dp" />

    <LinearLayout
        android:layout_width="359dp"
        android:layout_height="592dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:weightSum="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.142"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/imageView5">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.21" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.26"
            android:fontFamily="cursive"
            android:text="Quem somos?"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="40sp"
            tools:layout_editor_absoluteX="39dp"
            tools:layout_editor_absoluteY="100dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="161dp"
            android:fontFamily="casual"
            android:text="Uma equipe de programadores comprometidos com o desenvolvimento das ciências biológicas. É desta forma que nos vemos nesta parceria com o IFPR e o Projeto Célula, orientado por Késsia Marchi."
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="38dp"
            tools:layout_editor_absoluteY="177dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.11" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.26"
            android:fontFamily="casual"
            android:text="Equipe: Luana, Luiz, Pedro Arthur e Thiago"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="31dp"
            tools:layout_editor_absoluteY="406dp" />

        <Button
            android:id="@+id/btnVoltar"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#008000"
            android:text="Voltar"
            android:textColor="#fff"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="461dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
